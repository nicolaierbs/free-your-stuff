<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_view">

    <TextView
        android:id="@+id/text_detail_type"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:id="@+id/text_detail_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_detail_type"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:id="@+id/text_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/text_detail_type"
        />

    <TextView
        android:id="@+id/text_detail_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/text_detail_description"
        />

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/text_detail_description"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:src="@drawable/img_books_large"
        android:layout_below="@+id/text_detail_user"
        />



</RelativeLayout>